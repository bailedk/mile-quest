{
  "name": "mile-quest",
  "version": "1.0.0",
  "description": "Mobile-first team walking challenge platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspace=packages/frontend && npm run build --workspace=packages/backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/.next",
    "postinstall": "npm run build --workspace=packages/shared",
    "kill": "bash scripts/kill-dev.sh",
    "kill-all": "bash scripts/kill-dev.sh && docker stop mile-quest-db 2>/dev/null || echo 'Database not running'",
    "start": "bash scripts/start-dev.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mile-quest.git"
  },
  "author": "Mile Quest Team",
  "license": "UNLICENSED"
}