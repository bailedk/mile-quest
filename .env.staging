# Mile Quest - Staging Environment Configuration

# Database
DATABASE_URL="postgresql://milequest:${DB_PASSWORD}@${DB_ENDPOINT}:5432/milequest"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCOUNT_ID="${AWS_ACCOUNT_ID}"

# AWS Cognito (populated by CDK outputs)
USER_POOL_ID="${USER_POOL_ID_STAGING}"
USER_POOL_CLIENT_ID="${USER_POOL_CLIENT_ID_STAGING}"
COGNITO_REGION="us-east-1"

# API Configuration
API_BASE_URL="https://api-staging.mile-quest.com"
CORS_ORIGIN="https://staging.mile-quest.com"
NODE_ENV="staging"

# Frontend Configuration
NEXT_PUBLIC_API_URL="https://api-staging.mile-quest.com"
NEXT_PUBLIC_COGNITO_REGION="us-east-1"
NEXT_PUBLIC_COGNITO_USER_POOL_ID="${USER_POOL_ID_STAGING}"
NEXT_PUBLIC_COGNITO_CLIENT_ID="${USER_POOL_CLIENT_ID_STAGING}"

# WebSocket Configuration (Pusher)
NEXT_PUBLIC_PUSHER_APP_KEY="${PUSHER_APP_KEY_STAGING}"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="${PUSHER_APP_ID_STAGING}"
PUSHER_SECRET="${PUSHER_SECRET_STAGING}"

# External Services
MAPBOX_ACCESS_TOKEN="${MAPBOX_TOKEN_STAGING}"

# Security
JWT_SECRET="${JWT_SECRET_STAGING}"
SESSION_SECRET="${SESSION_SECRET_STAGING}"

# Monitoring
LOG_LEVEL="info"
ENABLE_METRICS="true"

# Email Service (AWS SES)
SES_REGION="us-east-1"
FROM_EMAIL="noreply@staging.mile-quest.com"

# Feature Flags
ENABLE_GOOGLE_AUTH="false"
ENABLE_OFFLINE_SYNC="true"
ENABLE_PUSH_NOTIFICATIONS="false"