# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your values

# ======================
# API Configuration
# ======================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1

# ======================
# Authentication
# ======================
# AWS Cognito (optional - leave blank to use mock auth)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_CLIENT_ID=

# Auth Provider Selection
NEXT_PUBLIC_AUTH_PROVIDER=mock

# ======================
# WebSocket Configuration
# ======================
# Pusher (leave blank to use mock WebSocket)
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# WebSocket Provider Selection
NEXT_PUBLIC_WEBSOCKET_PROVIDER=mock

# ======================
# Maps Configuration
# ======================
# Mapbox Public Token (required for map features)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_public_mapbox_token_here

# Map Provider Selection
NEXT_PUBLIC_MAP_PROVIDER=mapbox

# Map Configuration
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LAT=37.7749
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LNG=-122.4194
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=12

# ======================
# Feature Flags
# ======================
NEXT_PUBLIC_ENABLE_REAL_TIME=false
NEXT_PUBLIC_ENABLE_OFFLINE_SYNC=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ======================
# Analytics (Future)
# ======================
# NEXT_PUBLIC_ANALYTICS_PROVIDER=ga4
# NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# ======================
# Application Settings
# ======================
NEXT_PUBLIC_APP_NAME=Mile Quest
NEXT_PUBLIC_APP_DESCRIPTION=Team walking challenge platform
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ======================
# Development Settings
# ======================
# Enable debug mode for verbose logging
NEXT_PUBLIC_DEBUG_MODE=true

# Use mock services for local development
NEXT_PUBLIC_USE_MOCK_SERVICES=true

# ======================
# Performance Monitoring
# ======================
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# ======================
# Error Reporting (Future)
# ======================
# NEXT_PUBLIC_SENTRY_DSN=
# NEXT_PUBLIC_ERROR_REPORTING_ENABLED=false