{
  "name": "Mile Quest",
  "short_name": "Mile Quest",
  "description": "Team walking challenge platform where teams set geographic goals and track collective walking distances",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#059669",
  "background_color": "#ffffff",
  "scope": "/",
  "categories": ["health", "fitness", "lifestyle", "sports"],
  "lang": "en-US",
  "dir": "ltr",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your team progress and activity dashboard",
      "url": "/dashboard"
    },
    {
      "name": "Log Activity",
      "short_name": "Log Activity", 
      "description": "Record a new walking activity",
      "url": "/activities/new"
    },
    {
      "name": "Teams",
      "short_name": "Teams",
      "description": "Manage your teams and view team progress",
      "url": "/teams"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+milequest",
      "url": "/teams/join?code=%s"
    }
  ],
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "handle_links": "preferred",
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  "scope_extensions": [
    {
      "origin": "https://api.milequest.app"
    }
  ]
}