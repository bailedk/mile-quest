# Backend Environment Variables Template
# Copy this file to .env.local and fill in your values

# ======================
# Core Configuration
# ======================
NODE_ENV=development
PORT=3001
STAGE=dev

# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:password@localhost:5432/milequest_dev

# ======================
# Authentication
# ======================
JWT_SECRET=your-jwt-secret-here-change-in-production

# AWS Cognito (optional - leave blank to use mock auth)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# ======================
# AWS Configuration
# ======================
AWS_REGION=us-east-1

# ======================
# External Services
# ======================

# Mapbox - Required for map features
# Development token (public token for local development)
MAPBOX_ACCESS_TOKEN=pk.your_development_token_here
MAPBOX_TOKEN_DEV=pk.your_development_token_here

# Staging token (can be same as dev or separate)
MAPBOX_TOKEN_STAGING=pk.your_staging_token_here

# Production token (use secret token with domain restrictions)
MAPBOX_TOKEN_PROD=sk.your_production_token_here

# Mapbox Configuration
MAPBOX_SCOPES=geocoding,directions,optimization,tiles:read,styles:read
MAPBOX_RATE_LIMIT_PER_MINUTE=600
MAPBOX_RATE_LIMIT_PER_DAY=100000

# Domain restrictions (comma-separated, optional - defaults based on STAGE)
# MAPBOX_ALLOWED_DOMAINS=https://milequest.app,https://www.milequest.app

# Map Provider Selection
MAP_PROVIDER=mapbox

# ======================
# Feature Flags
# ======================
ENABLE_OFFLINE_SYNC=false

# ======================
# API Configuration
# ======================
CORS_ORIGIN=http://localhost:3000
API_VERSION=v1

# ======================
# Logging
# ======================
LOG_LEVEL=debug

# ======================
# Development Options
# ======================
# Use 'mock' for local development without external services
SERVICE_IMPLEMENTATIONS=mock

