{
  "name": "@mile-quest/backend",
  "version": "1.0.0",
  "description": "AWS Lambda backend for Mile Quest",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:lambda",
    "build:lambda": "node scripts/build.js",
    "dev": "npm run build && sam local start-api --port 3001",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-lambda-powertools/metrics": "^1.17.0",
    "@aws-lambda-powertools/tracer": "^1.17.0",
    "@mile-quest/shared": "^1.0.0",
    "@prisma/client": "^5.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "aws-lambda": "^1.0.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "prisma": {
    "seed": "tsx src/scripts/seed.ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "esbuild": "^0.19.8",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
