# Mile Quest - Production Environment Configuration

# Database
DATABASE_URL="postgresql://milequest:${DB_PASSWORD}@${DB_ENDPOINT}:5432/milequest"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCOUNT_ID="${AWS_ACCOUNT_ID}"

# AWS Cognito (populated by CDK outputs)
USER_POOL_ID="${USER_POOL_ID_PRODUCTION}"
USER_POOL_CLIENT_ID="${USER_POOL_CLIENT_ID_PRODUCTION}"
COGNITO_REGION="us-east-1"

# API Configuration
API_BASE_URL="https://api.mile-quest.com"
CORS_ORIGIN="https://mile-quest.com"
NODE_ENV="production"

# Frontend Configuration
NEXT_PUBLIC_API_URL="https://api.mile-quest.com"
NEXT_PUBLIC_COGNITO_REGION="us-east-1"
NEXT_PUBLIC_COGNITO_USER_POOL_ID="${USER_POOL_ID_PRODUCTION}"
NEXT_PUBLIC_COGNITO_CLIENT_ID="${USER_POOL_CLIENT_ID_PRODUCTION}"

# WebSocket Configuration (Pusher)
NEXT_PUBLIC_PUSHER_APP_KEY="${PUSHER_APP_KEY_PRODUCTION}"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="${PUSHER_APP_ID_PRODUCTION}"
PUSHER_SECRET="${PUSHER_SECRET_PRODUCTION}"

# External Services
MAPBOX_ACCESS_TOKEN="${MAPBOX_TOKEN_PRODUCTION}"

# Security
JWT_SECRET="${JWT_SECRET_PRODUCTION}"
SESSION_SECRET="${SESSION_SECRET_PRODUCTION}"

# Monitoring
LOG_LEVEL="warn"
ENABLE_METRICS="true"

# Email Service (AWS SES)
SES_REGION="us-east-1"
FROM_EMAIL="noreply@mile-quest.com"

# Feature Flags
ENABLE_GOOGLE_AUTH="true"
ENABLE_OFFLINE_SYNC="true"
ENABLE_PUSH_NOTIFICATIONS="true"

# Performance
MAX_REQUEST_SIZE="10mb"
RATE_LIMIT_REQUESTS="1000"
RATE_LIMIT_WINDOW="15"